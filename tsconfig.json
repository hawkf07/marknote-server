{
  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "swc": true,
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/",
    "sourceMap": true,
    "esModuleInterop": true

  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}
